{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "moduleDetection": "auto",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "bun-types"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "$src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}